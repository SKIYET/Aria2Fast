<mah:MetroWindow x:Class="WkyFast.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WkyFast"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        xmlns:tb="http://www.hardcodet.net/taskbar" xmlns:view="clr-namespace:WkyFast.View"
                 Title="MainWindow" Height="450" Width="700" Icon="icon.ico" TitleBarHeight="28" WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterScreen" >



    <mah:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Style/AQButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </mah:MetroWindow.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="77*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <tb:TaskbarIcon x:Name="myNotifyIcon"
                    Visibility="Visible"
                    ToolTipText="WkyFast"
                    MenuActivation="LeftOrRightClick"
                    PopupActivation="DoubleClick" IconSource="/icon.ico" Grid.RowSpan="2" Grid.ColumnSpan="2"
      />
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Style="{StaticResource AQButtonGreen}" Content="添加任务" Width="80"></Button>
                <Button Style="{StaticResource AQButtonBlue}" Content="添加订阅" Width="80" Margin="10,0,0,0"></Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1">
            <view:WkyMainTabView  x:Name="WkyMainTabView"></view:WkyMainTabView>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1">

        </Grid>

    </Grid>
</mah:MetroWindow>
