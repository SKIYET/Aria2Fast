<UserControl x:Class="WkyFast.View.View.ConfigListItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WkyFast.View.View"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="260"
             >


    <Grid>

        <StackPanel Orientation="Horizontal">
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="Bold">
                        <TextBlock.Style>
                            <Style  TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#808695" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource= {RelativeSource AncestorType={x:Type DataGridRow}}}" Value="True">
                                        <Setter Property="Foreground" Value="#2d8cf0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <!-- two way -->
                </StackPanel>


            </StackPanel>
        </StackPanel>
        
    </Grid>
</UserControl>
